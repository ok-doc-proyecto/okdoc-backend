  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Iniciar app",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:7000/ws/async/",
      "webRoot": "${workspaceFolder/chats/templates/}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "*": "${webRoot}/*"
      }
    },
    {
      "name": "Iniciar Servidor desarrollo",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder/.venv}",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["runserver", "7000"],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Iniciar Hypercorn",
      "type": "python",
      "request": "launch",
      "envFile": "${workspaceFolder/.venv}",
      "module": "hypercorn",
      "args": [
        "project/okdoc.asgi:application",
        "--reload",
        "--bind",
        "localhost:7000"
      ],
      "django": true,
      "justMyCode": false
    }
  ]
}
